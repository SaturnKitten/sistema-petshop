{% extends "templates/base.html" %}

{% block content %}
  <div x-data="funcionarioForm()">
    <ol class="breadcrumb mb-2">
      <li class="breadcrumb-item active">{{ title }}</li>
    </ol>
    <div class="row">
      <div class="col-12">

        <div class="card-header">
          {{ title }}
        </div>

        <div class="card-body">
          <div>
            <form>
              <div class="row">
                <div class="col-md-4">
                  <div class="form-group">
                    <label for="id">ID</label>
                    <input type="text" class="form-control" id="id" x-model="form.id" disabled>
                  </div>
                </div>

                <div class="col-md-8">
                  <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" class="form-control" id="nome" x-model="form.nome" x-bind:disabled="disabled" required>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="username" x-model="form.username" x-bind:disabled="disabled" required>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-group">
                    <label for="senha">Senha</label>
                    <input type="password" class="form-control" id="senha" x-model="form.senha" x-bind:disabled="disabled" required>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="cargo">Cargo</label>
                    <input type="text" class="form-control" id="cargo" x-model="form.cargo" x-bind:disabled="disabled">
                  </div>
                </div>

                <div class="col-md-3">
                  <div class="form-group">
                    <label for="datacontratacao">Data de Contratação</label>
                    <input type="date" class="form-control" id="datacontratacao" x-model="form.datacontratacao" x-bind:disabled="disabled" required>
                  </div>
                </div>

                <div class="col-md-3">
                  <div class="form-group">
                    <label for="salario">Salário (R$)</label>
                    <input type="number" class="form-control" id="salario" x-model="form.salario" step="0.01" min="0" x-bind:disabled="disabled" required>
                  </div>
                </div>
              </div>

              <div class="mt-3">
                <button type="button" @click="updateForm()" class="btn btn-primary">Salvar</button>
                <button type="button" @click="deleteForm()" x-show="!disabled" class="btn btn-danger">Excluir</button>
                <a href="/funcionario/manutFuncionarios" class="btn btn-info ml-2" role="button">Retornar</a>
              </div>
            </form>

            <div class="mt-3">
              <template x-if="message">
                <div :class="messageClass" x-text="message"></div>
              </template>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    window.onload = function () {
      windowOnLoad();
      const localErro = "{{erro}}";
      if (localErro != "") {
        alert("[vwFuncionario|onload] Servidor retornou o erro: " + localErro);
      }
      $("#nome").focus();
    };

    function funcionarioForm() {
      return {
        form: {
          id: "{{ data.id }}",
          nome: "{{ data.nome }}",
          username: "{{ data.username }}",
          senha: "{{ data.senha }}",
          cargo: "{{ data.cargo }}",
          datacontratacao: "{{ data.datacontratacao }}",
          salario: "{{ data.salario }}",
          removido: false
        },
        message: '',
        messageClass: '',
        disabled: {{ disabled }},

        async updateForm() {
          try {
            const response = await fetch('/funcionario/UpdateFuncionario', {
              method: 'POST',
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify(this.form)
            });

            const result = await response.json();
            if (result.status == "ok") {
              alert("Funcionário atualizado com sucesso!");
            } else {
              this.message = `Erro ao atualizar funcionário: ${result.status}`;
              this.messageClass = 'alert alert-danger';
            }
          } catch (error) {
            this.message = `Erro de conexão: ${error.message}`;
            this.messageClass = 'alert alert-danger';
          }
        },

        async deleteForm() {
          try {
            const response = await fetch('/funcionario/DeleteFuncionario', {
              method: 'POST',
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify(this.form)
            });

            const result = await response.json();
            if (result.status == "ok") {
              alert("Funcionário excluído com sucesso!");
              window.location.href = "/funcionario/manutFuncionarios";
            } else {
              this.message = `Erro ao excluir funcionário: ${result.status}`;
              this.messageClass = 'alert alert-danger';
            }
          } catch (error) {
            this.message = `Erro de conexão: ${error.message}`;
            this.messageClass = 'alert alert-danger';
          }
        },

        resetForm() {
          this.form = {
            nome: '',
            username: '',
            senha: '',
            cargo: '',
            datacontratacao: '',
            salario: '',
            removido: false
          };
          this.message = '';
        }
      };
    }
  </script>

{% endblock %}
