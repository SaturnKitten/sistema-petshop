{% extends "templates/base.html" %}

{% block content %}
  <div x-data="funcionarioForm()">
    <ol class="breadcrumb mb-2">
      <li class="breadcrumb-item active">{{ title }}</li>
    </ol>
    <div class="row">
      <div class="col-12">

        <div class="card-header">
          {{ title }}
        </div>

        <div class="card-body">
          <div>
            <form>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" class="form-control" id="nome" x-model="form.nome" required>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="username" x-model="form.username" required>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="senha">Senha</label>
                    <input type="password" class="form-control" id="senha" x-model="form.senha" required>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-group">
                    <label for="cargo">Cargo</label>
                    <input type="text" class="form-control" id="cargo" x-model="form.cargo">
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="datacontratacao">Data de Contratação</label>
                    <input type="date" class="form-control" id="datacontratacao" x-model="form.datacontratacao" required>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-group">
                    <label for="salario">Salário (R$)</label>
                    <input type="number" step="0.01" min="0" class="form-control" id="salario" x-model="form.salario" required>
                  </div>
                </div>
              </div>

              <button type="button" @click="insertForm()" class="btn btn-primary mt-4">Salvar</button>
              <a href="/funcionario/manutFuncionarios" class="btn btn-info mt-4 ml-2" role="button" aria-disabled="true">Retornar</a>
            </form>

            <div class="mt-3">
              <template x-if="message">
                <div :class="messageClass" x-text="message"></div>
              </template>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    window.onload = function () {
      windowOnLoad();

      //@ Caso tenha dado erro no servidor frontEnd, ele será mostrado aqui.
      const localErro = "{{ erro }}";
      if (localErro != "") {
        alert("[vwFuncionario|onload] Servidor retornou o erro: " + localErro);
      }
      $("#nome").focus();
    };

    function funcionarioForm() {
      return {
        form: {
          nome: '',
          username: '',
          senha: '',
          cargo: '',
          datacontratacao: '',
          salario: '',
          removido: false
        },
        message: '',
        messageClass: '',

        async insertForm() {
          try {
            console.log("Valor na página:", JSON.stringify(this.form));
            const response = await fetch('/funcionario/insertFuncionario', {
              method: 'POST',
              headers: {
                "Content-Type": "application/json"
              },
              body: JSON.stringify(this.form)
            });

            const result = await response.json();
            console.log("Valor na response:", response);
            console.log("Valor na result:", result);

            if (result.status == "ok") {
              alert("Funcionário cadastrado com sucesso!");
              this.resetForm();
            } else {
              const errorData = result.status;
              this.message = `Erro! Não foi possível cadastrar o funcionário devido ao erro: ${errorData}`;
              this.messageClass = 'alert alert-danger';
            }
          } catch (error) {
            this.message = `Erro de conexão: ${error.message}`;
            this.messageClass = 'alert alert-danger';
          }
        },

        resetForm() {
          this.form = {
            nome: '',
            username: '',
            senha: '',
            cargo: '',
            datacontratacao: '',
            salario: '',
            removido: false
          };
          this.message = false;
        }
      };
    }
  </script>

{% endblock %}
